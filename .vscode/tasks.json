{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-12 アクティブなファイルのビルド",
            "command": "/opt/homebrew/bin/g++-12",
            "args": [
                // "-fanalyzer",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-gdwarf-3",
                "-std=c++20",
                "-I${workspaceFolder}/include",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-DHASSAKU_DEBUG",
                "-Wall",
                "-Wextra",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "デバッガーによって生成されたタスク。"
        }
    ],
    "version": "2.0.0"
}